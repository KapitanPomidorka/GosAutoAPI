@model Domain.Contracts.Responses.Vehicle.VehicleResponseGetById
@{
    ViewData["Title"] = "Details";
}

<h1>@Html.DisplayFor(model => model.Model) @Html.DisplayFor(model => model.CarNumbers)</h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
           Модель
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Model)
        </dd>
        <dt class = "col-sm-2">
           Номер транспорта
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CarNumbers)
        </dd>
        <dt class = "col-sm-2">
            Описание
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
            Водитель
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Driver.Name)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Редактировать</a> |
    <a asp-action="Index">Назад к списку</a>
</div>
